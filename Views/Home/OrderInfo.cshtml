@model List<assignment2.Models.Order>
@{
    ViewBag.Title = "Order Information";
}

<h2>Order Information</h2>

@if (!Model.Any())
{
    <p>No orders found.</p>
}
else
{
    <table class="table">
        <tr>
            <th>Order ID</th>
            <th>Product Name</th>
            <th>Price</th>
        </tr>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.ProductName</td>
                <td>@order.Price</td>
            </tr>
        }
    </table>
}